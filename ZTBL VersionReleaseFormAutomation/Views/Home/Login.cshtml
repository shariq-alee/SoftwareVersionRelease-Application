@using System.Web.Optimization
@model ZTBL_VersionReleaseFormAutomation.Models.User

<html lang="en">
@{HtmlHelper.UnobtrusiveJavaScriptEnabled = true;}

<head>
    <meta name="viewport" ~/Content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" ~/Content="">
    <meta name="author" ~/Content="">
    <title>Version Release</title>
    <!-- Bootstrap core CSS-->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template-->
    <link href="~/Content/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- Custom styles for this template-->
    <link href="~/Content/css/sb-admin.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Manuale" rel="stylesheet">
    
    @*<script src="~/Scripts/jquery-1.10.2.js"></script>*@
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>  
    @*<link rel="stylesheet" href="~/Content/LoaderStyle.css" />*@

    <script>
        function maxLengthCheck(object) {
            if (object.value.length > object.maxLength)
                object.value = object.value.slice(0, object.maxLength)
        }

    </script>
    <script src="@Url.Content("~/Scripts/jquery-3.2.1.js")" type="text/javascript"></script>
    

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type = "text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    
</head>

<body class="bg-dark">
 
     <div id="divEmp">
    
    @*@using (Html.BeginForm(new { id ="loginForm"}))*@

       <center></center>
        
            <p style="text-align: center; color: white;font-size:45px;margin-top:15px; font-family: 'Manuale', serif;">Software Version Management <br /> System</p>
    <div class="container" style="padding-top:0px">

        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Login</div>
            <div id="divUp" class="card-body">
                @using (Ajax.BeginForm("Login", "Home", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divUp" }))
                {
                    @Html.AntiForgeryToken()
                    <div id="hehe">
                    <div class="form-group">
                        <label for="exampleInputEmail1">PP Number</label>
                        @*<input class="form-control" type="number" aria-describedby="emailHelp" placeholder="Enter Number">*@
                        <div class="editor-field">
                            @Html.TextBoxFor(u => u.PPNumber, new {id="pp", @class = "form-control", type = "text", placeholder = "Enter Number" ,Value=ViewBag.Uname , @min = "1", @max = "999999", maxlength = "6", oninput = "maxLengthCheck(this)"})
                            @Html.ValidationMessageFor(u => u.PPNumber, null, new { @class = "text-danger" })
                        </div>
                        </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        @*<input class="form-control" id="exampleInputPassword1" type="password" placeholder="Password">*@
                        @Html.TextBoxFor(u => u.Password, new {id="pass", @class = "form-control", type = "Password", Value=ViewBag.Pass, placeholder = "Password" })
                        @Html.ValidationMessageFor(u => u.Password, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <label class="form-check-label">
                                @Html.CheckBoxFor(u => u.rememberMe, new { @class="form-check-input"}) Remember Me
                            </label>
                        </div>@Html.ValidationSummary(true, "Login Failed, check Username and Password", new { style = "color:#ff2d2d" })

                        <label id="message"></label>
                    </div>
                    <input type="submit" id="btnSubmit" value="Login" class="btn btn-primary btn-block" />
                </div>
                }
                <div class="text-center">
                </div>
            </div>
        </div>
    </div>
        <br /><br />
        <p style="color:white;text-align:center;" >Copyrights ZTBL 2017.</p>
    <!-- Bootstrap core JavaScript-->
        <script src="~/Content/vendor/jquery/jquery.min.js"></script>
        <script src="~/Content/vendor/popper/popper.min.js"></script>
        <script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!-- Core plugin JavaScript-->
        <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>

      
        </div>
    
</body>

</html>
